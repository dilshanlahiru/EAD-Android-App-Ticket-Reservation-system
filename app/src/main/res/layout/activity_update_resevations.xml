<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateResevations">

    <TextView
        android:id="@+id/Label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="Edit Reservation"
        android:textColor="@color/orange1"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/regImg"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/img_content_login"
        android:src="@drawable/new_logo" />

    <TextView
        android:id="@+id/vTrainName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="Train Name: "
        android:textColor="@color/orange1"
        android:textSize="23dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/eTrainName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="Train Name"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/vStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="Start: "
        android:textColor="@color/orange1"
        android:textSize="23dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/eStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="start"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/vDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="Destination: "
        android:textColor="@color/orange1"
        android:textSize="23dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/eDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="sestination"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/vSeatcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:padding="1dp"
        android:text="Seat Count: "
        android:textColor="@color/orange1"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="3dp"
        android:text="Seat count"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonUpdateReservation"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/orange1"
        android:text="Update"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="DuplicateSpeakableTextCheck" />

</LinearLayout>