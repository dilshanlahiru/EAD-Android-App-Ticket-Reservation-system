            <!--    Queue Status-->
            <LinearLayout
                android:id="@+id/fuel_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fuelUiLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/fuel_main_label"
                    android:textColor="@color/orange1"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/fuelAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/petrolAvailabilityCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/orangecard">

                        <TextView
                            android:id="@+id/petrolAvailability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/yes"
                            android:textSize="60sp"
                            android:textColor="@color/orange1"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/petrol1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/petrol"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/orangetint"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dieselAvailabilityCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/orangecard">

                        <TextView
                            android:id="@+id/dieselAvailability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/yes"
                            android:textSize="60sp"
                            android:textColor="@color/orange1"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/diesel1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/diesel"
                            android:gravity="center"
                            android:textSize="20sp"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/orangetint"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--    Queue Status-->
            <LinearLayout
                android:id="@+id/que_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eueLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/station_main_label"

                    android:textColor="@color/orange1"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/fuelQueueStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/petrolQueueCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/orangecard">

                        <TextView
                            android:id="@+id/petrolVehiclesNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/petrolQ"
                            android:textSize="60sp"
                            android:textColor="@color/orange1"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/petrol2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/petrol"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/orangetint"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dieselQueueCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/orangecard">

                        <TextView
                            android:id="@+id/dieselVehiclesNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/dieselQ"
                            android:textSize="60sp"
                            android:textColor="@color/orange1"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/diesel2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/diesel"
                            android:gravity="center"
                            android:textSize="20sp"
                            tools:ignore="NestedWeights"
                            android:textColor="@color/orangetint"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--    Check in/out Status-->
            <LinearLayout
                android:id="@+id/checkin_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mainUiLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/update_your_status"
                    android:textColor="@color/orange1"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/checkin_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:padding="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/check_in"
                        android:backgroundTintMode="add"
                        android:textSize="18dp"
                        android:backgroundTint="@color/orange1"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/checkout_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:backgroundTint="@color/orange1"
                        android:padding="20dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/check_out"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
