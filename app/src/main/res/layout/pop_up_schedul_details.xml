<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    android:layout_margin="20dp">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:src="@drawable/new_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Train Name : "
            android:textColor="@color/orange1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/popupTrainName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Train Name: "
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Start : "
            android:textColor="@color/orange1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/popupStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Start: " /></LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Destination: "
            android:textColor="@color/orange1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/popupDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Destination: " /></LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/v_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Start Time: "
            android:textColor="@color/orange1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/popupStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Start Time: " /></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/v_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:text="Destination Time: "
            android:textColor="@color/orange1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/popupDestinationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Destination Time: " /></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/v_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Seat Count: "
            android:textColor="@color/orange1"
            android:textColorHint="@color/orangetint"
            android:textSize="18dp" />

<!--        <TextView-->
<!--            android:id="@+id/popupSeatCount"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
